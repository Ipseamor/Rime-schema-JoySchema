patch:
  schema/name: 朙月拼音·简体
  schema/dependencies/+:
    - stroke # 笔画反查时依赖五笔输入法
    # - easy_en # 中英文混输时依赖easy_en输入法

  engine/translators/+:
#   - table_translator@english # 载入英文码表，取名为 english
    - reverse_lookup_translator

  translator/dictionary: luna_pinyin.ex # 指示此输入法使用自定制词库。将此行注释则使用默认词库。

  # english:  # 英文码表设置项
  #   dictionary: easy_en
  #   spelling_hints: 9
  #   enable_completion: true  # 是否启用英文输入联想补全
  #   enable_sentence: false
  #   initial_quality: -1

  reverse_lookup:
    dictionary: stroke
    enable_completion: true
    prefix: "`"
    suffix: "'"
    tips: 〔笔画〕
    preedit_format:
      - xlit/hspnz/一丨丿丶乙/
    comment_format:
      - xform/([nl])v/$1ü/

  punctuator/import_preset: symbols # 导入扩展符号表

  key_binder/bindings:
    - { when: always, accept: Control+Shift+9, toggle: zh_simp }
    - { when: always, accept: Control+Shift+parenleft, toggle: zh_simp }

  recognizer:
    import_preset: default
    patterns:
      punct: '^/([0-9]0?|[A-Za-z]+)$' # 触发输入扩展符号的正则表达式
      reverse_lookup: "`[a-z]*'?$" # 触发笔画反查的正则表达式
